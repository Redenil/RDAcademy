@model RDAcademy.Models.Contract

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset style="margin-left:20px">
        <legend>Contract</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.CodeContract)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CodeContract)
            @Html.ValidationMessageFor(model => model.CodeContract)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EffectDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EffectDate)
            @Html.ValidationMessageFor(model => model.EffectDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IndividualId, "Individual")
        </div>
        <div class="editor-field">
            @Html.DropDownList("IndividualId", String.Empty)
            @Html.ValidationMessageFor(model => model.IndividualId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
